<div class="container text-center">
  <h2 class="mt-5 mb-5">購入が完了しました</h2>
  <div class="mb-3">
    配送先：<%= current_user.address %>
  </div>
  <div>
    <%= current_user.name %>さんが購入した商品
  </div>
  <div class="row mt-3 mb-3">
    <div class="col-md-4">
      <% if @item.image? %>
        <%= image_tag @item.image.url(:thumb) %>
      <% end %>
    </div>
    <div class="col-md-8">
      <div>
        出品者：<%= @item.user.name %>
      </div>
      <div>
        商品名：<%= link_to @item.title, item_path(@item) %>
      </div>
      <div>
        カテゴリー：<%= @item.category %>
      </div>
      <div>
        価格：<%= @item.price %>円
      </div>
    </div>
  </div>
</div>