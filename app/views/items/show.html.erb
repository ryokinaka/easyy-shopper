<div class="container">
  <div>
    <% if @item.image? %>
      <%= image_tag @item.image.url(:thumb) %>
    <% end %>
  </div>
  
  <% if @item.buying == 'soldout' %>
    
  <% else %>
    <div class="text-right mt-3">
      <%= render 'wants/like_button', item: @item %>
    </div>
  <% end %>
  
  <table class="table mt-3">
    <tr class="table-head">
      <th>商品情報</th>
      <th></th>
    </tr>
    <tr>
      <td>出品者</td>
      <td><%= @item.user.name %></td>
    </tr>
    <tr>
      <td>商品名</td>
      <td><%= @item.title %></td>
    </tr>
    <tr>
      <td>価格</td>
      <td><%= @item.price %>円</td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= @item.explanation %></td>
    </tr>
    <tr>
      <td></td>
      <td></td>
    </tr>
  </table>
  
  <% if @item.buying == 'soldout' %>
    
  <% elsif current_user.id == @item.user_id %>
    <div class="text-right mb-3">
      <%= link_to 'アイテム情報を変更する', edit_item_path(@item), class: 'btn btn-primary' %>
    </div>
    <div class="text-right mb-4">
      <%= link_to 'このアイテムを削除する', @item, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger' %>
    </div>
  <% else %>
    <div class="text-right mt-3 mb-4">
      <%= link_to '購入手続きへ', purchase_item_path(@item.id), class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>
</div>