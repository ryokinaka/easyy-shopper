<div class="container">
  <div>
    <% if @item.image? %>
      <%= image_tag @item.image.url(:thumb) %>
    <% end %>
  </div>
  
  <div class="row">
    <div class="col-4">
      出品者：<%= @item.user.name %>
    </div>
    <div class="col-4">
      価格：<%= @item.price %>円
    </div>
  </div>
  
  <% if @item.buying == 'soldout' %>
    
  <% else %>
    <div class="row">
      <div class="col-6 col-md-8"></div>
      <div class="col-6 col-md-4">
        <%= render 'wants/like_button', item: @item %>
      </div>
    </div>
  <% end %>
  
  <div>
    <div>
      商品名：<%= @item.title %>
    </div>
    <div>
      商品説明：<%= @item.explanation %>
    </div>
  </div>
  
  <% if @item.buying == 'soldout' %>
    
  <% elsif current_user.id == @item.user_id %>
    <div class="text-right mb-3">
      <%= link_to 'アイテム情報を変更する', edit_item_path(@item), class: 'btn btn-primary' %>
    </div>
    <div class="text-right">
      <%= link_to 'このアイテムを削除する', @item, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger' %>
    </div>
  <% else %>
    <div class="text-center mt-3">
      <%= link_to '購入手続きへ', purchase_item_path(@item.id), class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>
</div>