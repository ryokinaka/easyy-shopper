<h2 class="mb-4 text-center">購入した商品</h2>
<div class="container">
  <div class="row mb-4">
    <% @buyer.each do |buyer| %>
      <div class="col-6 col-lg-3 favorite">
        <% if buyer.item.image? %>
          <%= image_tag buyer.item.image.url(:thumb) %>
        <% end %>
      </div>
      <div class="col-6 col-lg-3 favorite2">
        <div>
          出品者：<%= buyer.item.user.name %>
        </div>
        <div>
          商品名：<%= link_to buyer.item.title, item_path(buyer.item) %>
        </div>
        <div>
          価格：<%= buyer.item.price %>円
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @buyer %>
</div>