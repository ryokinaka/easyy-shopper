<div class="container">
  <div class="mb-3">
    <% if @item.image? %>
      <%= image_tag @item.image.url(:thumb) %>
    <% end %>
  </div>
  
  <table class="table">
    <tr class="table-head">
      <th>商品情報</th>
      <th></th>
    </tr>
    <tr>
      <td>出品者</td>
      <td><%= @item.user.name %></td>
    </tr>
    <tr>
      <td>商品名</td>
      <td><%= link_to @item.title, item_path(@item) %></td>
    </tr>
    <tr>
      <td>価格</td>
      <td><%= @item.price %>円</td>
    </tr>
  </table>
  
  <table class="table">
    <tr class="table-head">
      <th>購入者情報</th>
      <th></th>
    </tr>
    <tr>
      <td>名前</td>
      <td><%= current_user.name %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= current_user.address %></td>
    </tr>
    <tr>
      <td></td>
      <td></td>
    </tr>
  </table>
  
  <div class="text-center mt-3 mb-4">
    <%= form_for(@item, url: done_item_path, method: :get) do |f| %>
      <%= f.submit '購入手続きを完了する', class: 'btn btn-primary btn-lg' %>
    <% end %>
  </div>
</div>