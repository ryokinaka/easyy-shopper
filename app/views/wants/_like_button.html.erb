<% if current_user.buyed_item?(item) %>

<% elsif current_user.wantings?(item) %>
  <%= form_for(current_user.wants.find_by(item_id: item.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :item_id, item.id %>
    <%= f.submit '気になるリストから外す', class: 'btn btn-danger' %>
  <% end %>
<% else %>
  <%= form_for(current_user.wants.build) do |f| %>
    <%= hidden_field_tag :item_id, item.id %>
    <%= f.submit '気になる', class: 'btn btn-primary' %>
  <% end %>
<% end %>